<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.azeroth.project.repository.ReviewRepository">

    <resultMap id="reviewDomainResultMap" type="com.azeroth.project.domain.ReviewDomain">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="content" property="content"/>
        <result column="reviewdate" property="reviewdate"/>
        <result column="reply" property="reply"/>
        <result column="replydate" property="replydate"/>
    </resultMap>

    <select id="findByUserId" resultMap="reviewDomainResultMap">
        SELECT
            id,
            ser_id,
            product_id,
            content,
            reviewdate,
            reply,
            replydate
        FROM
            review
        WHERE
            user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.azeroth.project.domain.ReviewDomain">
        INSERT INTO review (user_id, product_id, content, reviewdate)
        VALUES (#{userId}, #{productId}, #{content}, #{reviewdate})
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM review WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.azeroth.project.domain.ReviewDomain">
        UPDATE review
        SET user_id = #{userId}, product_id = #{productId}, content = #{content},
        reviewdate = #{reviewdate}
        WHERE id = #{id}
    </update>

    <update id="addReply" parameterType="com.azeroth.project.domain.ReviewDomain">
        UPDATE review
        SET reply = #{reply}, replydate = #{replydate}
        WHERE id = #{id}
    </update>

    <update id="makeVisible" parameterType="long">
        UPDATE review
        SET visible = true
        WHERE id = #{id}
    </update>

</mapper>
