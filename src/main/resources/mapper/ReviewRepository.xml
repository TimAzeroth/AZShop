<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.azeroth.project.repository.ReviewRepository">

    <resultMap id="reviewDomainResultMap" type="com.azeroth.project.domain.ReviewDomain">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="content" property="content"/>
        <result column="reviewdate" property="reviewdate"/>
        <result column="reply" property="reply"/>
        <result column="replydate" property="replydate"/>
    </resultMap>

    <select id="findByProductId" resultType="com.azeroth.project.domain.ReviewDomain">
        SELECT
            id,
            user_id,
            product_id,
            content,
            reviewdate,
            reply,
            replydate
        FROM
            review
        WHERE
            product_id = #{paran1}
    </select>

    <insert id="insert" parameterType="com.azeroth.project.domain.ReviewDomain">
        INSERT INTO review (user_id, product_id, content, reviewdate)
        VALUES (#{userId}, #{productId}, #{content}, #{reviewdate})
    </insert>

    <delete id="deleteReviewId" parameterType="long" flushCache="true">
        DELETE FROM review WHERE id = #{paran1}
    </delete>

<!--관리자 답변-->
    <update id="replyToReview" parameterType="com.azeroth.project.domain.ReviewDomain">
        UPDATE review
        SET reply = #{adminReply}
        WHERE id = #{paran1}
    </update>

    <select id="paginationPage" resultType="com.azeroth.project.domain.ReviewDomain">
        SELECT COUNT(id) FROM Review r WHERE Product_id = #{paran1};
    </select>

<!--    <select id="paginationPage">-->
<!--        <include refid="paginationPage"/>-->
<!--        ORDER BY reviewdate DESC-->
<!--        LIMIT #{param1}, #{param2}-->

<!--    </select>-->
</mapper>
