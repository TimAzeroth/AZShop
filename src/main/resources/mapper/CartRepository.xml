<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.azeroth.project.repository.CartRepository">

    <insert id="insert" flushCache="true" parameterType="com.azeroth.project.domain.CartDomain"
            keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        INSERT INTO Cart(id, user_id, cart_amount, regdate, status)
        VALUES (#{id},#{user_id},#{cart_amount},#{regdate},#{status})
    </insert>

    <select id="findByUserId" resultType="com.azeroth.project.domain.CartDomain">
        SELECT (id,user_id,cart_amount,regdate,status)
        FROM Cart
        WHERE id=#{id}
    </select>

    <select id="findById" resultType="com.azeroth.project.domain.CartDomain">
        SELECT (id,user_id,cart_amount,regdate,status)
        FROM Cart
        WHERE id=#{id}
    </select>

    <!-- 특정 Cart 의 상품들 불러오기 -->
    <select id="findByCart" resultType="com.azeroth.project.domain.ProductDomain"
            parameterType="com.azeroth.project.domain.CartDomain">
        SELECT (p.id, p.main_cate, p.sub_cate, p.p_name, p.p_img, p.price)
        FROM Product p, Cart_Product c, Cart j
        WHERE p.id = c.product_id AND c.cart_id = #{id} AND j.status='PICK'
    </select>

    <!-- 상품 Cart 에 추가하기 -->
    <insert id="addProductToCart" flushCache="true">
        INSERT INTO Cart_Product(cart_id, product_id)
        VALUES (#{param1},#{param2})
    </insert>

    <!-- Cart 의 수량, status 수정하기 -->
    <update id="updateCart" flushCache="true" parameterType="com.azeroth.project.domain.CartDomain">
        UPDATE Cart
        SET cart_amount=#{cart_amount}, status=#{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteProductFromCart" flushCache="true">
        DELETE FROM Cart_Product
        WHERE cart_id=#{param1} AND product_id=#{param2}
    </delete>



</mapper>